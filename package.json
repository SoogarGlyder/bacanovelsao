{
  "name": "novel-project-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start:api": "npm run start --workspace=server",
    "install:all": "npm install",
    "dev:full": "concurrently \"npm run start:api\" \"npm run dev\""
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "packages/client",
    "packages/server"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "next-sitemap": "^4.2.3"
  }
}

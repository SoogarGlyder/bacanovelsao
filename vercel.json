{
  "version": 2,
  "installCommand": "npm install",
  "builds": [
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "runtime": "nodejs18.x",
        "rootDirectory": "packages/client",
        "outputDirectory": "dist", 
        "buildCommand": "npm run build --workspace=client",
        "ignore": "**/admin.html,**/src/admin-main.jsx"
      }
    },
    {
      "src": "packages/server/api/index.js",
      "use": "@vercel/node"
    }
  ],

  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {"key": "Content-Encoding", "value": "none"},
        {"key": "Cache-Control", "value": "public, max-age=0, must-revalidate"} 
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "packages/server/api/index.js"
    },
    {
      "source": "/sitemap.xml",
      "destination": "packages/server/api/index.js"
    },
    {
      "source": "/assets/(.*)",
      "destination": "/packages/client/assets/$1" 
    },
    {
      "source": "/favicon.png",
      "destination": "/packages/client/favicon.png" 
    },
    {
      "source": "/header-sao-lost.svg",
      "destination": "/packages/client/header-sao-lost.svg" 
    },
    {
      "source": "/header-sao.svg",
      "destination": "/packages/client/header-sao.svg" 
    },
    {
      "source": "/icon-256.png",
      "destination": "/packages/client/icon-256.png"
    },
    {
      "source": "/icon-512-maskable.png",
      "destination": "/packages/client/icon-512-maskable.png"
    },
    {
      "source": "/icon-512.png",
      "destination": "/packages/client/icon-512.png"
    },
    {
      "source": "/manifest.json",
      "destination": "/packages/client/manifest.json"
    },
    {
      "source": "/robots.txt",
      "destination": "/packages/client/robots.txt"
    },
    {
      "source": "/saweria.png",
      "destination": "/packages/client/saweria.png" 
    },
    {
      "source": "/(.*)",
      "destination": "/packages/client/index.html" 
    }
  ]
}
{
  "version": 2,
  "builds": [
    {
      "src": "package.json", 
      "use": "@vercel/static-build",
      "config": {
        "runtime": "nodejs18.x",
        "outputDirectory": "dist", 
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/index.js", 
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)", 
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
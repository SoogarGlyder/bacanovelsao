{
  "version": 2,
  "installCommand": "npm install",
  "builds": [
    {
      "src": "packages/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "runtime": "nodejs18.x",
        "outputDirectory": "packages/client/dist",
        "buildCommand": "npm run build --workspace=client"
      }
    },
    {
      "src": "packages/server/api/index.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}